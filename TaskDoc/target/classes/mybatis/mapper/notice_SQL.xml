<?xml version="1.0" encoding="UTF-8"?>
	<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 다른 mapper과 중복 되지 않도록 네임스페이스 기재 -->
<mapper namespace="notice_SQL">
	<select id="noticelist" resultType="notice">

		SELECT * FROM notice WHERE pcode=#{pcode} ORDER BY ndate ASC

	</select>

	<insert id="noticeinsert" parameterType="notice">

		INSERT INTO notice VALUES(#{pcode}, #{ntitle}, #{ncontents}, NOW())

	</insert>
	
	<update id="noticeupdate" parameterType="notice">
		
		UPDATE notice SET ntitle=#{ntitle}, ncontents=#{ncontents} WHERE pcode=#{pcode}
		
	</update>
</mapper>
	